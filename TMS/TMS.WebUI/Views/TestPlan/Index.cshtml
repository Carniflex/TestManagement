@model IEnumerable<TMS.Common.Models.TestPlanModel>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Test Plans</h3>
        <div class="alert alert-success hifade in" style="display:none" id="successbar">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Test Plan saved successfully.</strong>
        </div>

    </div>
</div>

<p>
    @Html.ActionLink("Add new test plan", "CreateTestPlan", null, new { @class = "btn btn-primary" })
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Test Plan Name</th>
                            <th>Project</th>
                            <th>Author</th>
                            <th>Created</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>
                                <td>@Html.ActionLink(item.TestPlanName, "TestPlanDetails", new { id = item.ID })</td>
                                <td></td>
                                <td>@item.Author</td>
                                <td>@item.CreatedDeate</td>
                                <td>@item.Status</td>
                             
                                <td>
                                    <div class="btn-group">
                                        @Html.ActionLink("Edit", "EditTestPlan", new { id = item.ID }, new { @class = "btn btn-warning" })
                                        @Html.ActionLink("Delete", "DeleteProject", new { id = item.ID }, new { @class = "btn btn-danger" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!--/.row-->	