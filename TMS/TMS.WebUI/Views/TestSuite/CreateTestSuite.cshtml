@model TMS.Common.Models.TestSuiteModel

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">Add new test suite</div>
            <div class="panel-body">
                <div>
                    <label>Test Suite Name</label>
                    @Html.TextBoxFor(model => model.TestSuiteName,new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TestSuiteName)
                </div>
                <div>
                    
                    @Html.TextBoxFor(model => model.TestPlanId, new { @type="hidden"})
                    @Html.ValidationMessageFor(model => model.TestPlanId)
                </div>
            </div>
        </div>
        <p>
            <input type="submit" class="btn btn-success" value="Add" />
        </p>
        </div>

       
  
}

