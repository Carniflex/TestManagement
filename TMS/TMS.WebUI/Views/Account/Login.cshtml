@using System.Web.Optimization
@model TMS.Domain.Entities.AccountModel.LoginModel
@{
    Layout = "~/Views/Shared/_Auth.cshtml";
}


    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
       


        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">QA Tool Login</div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName,new{@class="form-control",placeholder="E-mail"})
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <input type="submit" value="Log in" class="btn btn-success"/>
                            @Html.ActionLink("Sign up", "Register",null,new{@class="btn btn-primary"}) 
                        </fieldset>
                        <p>
                           
                        </p>
                    </form>
                </div>
            </div>

        </div>




    }






