@model IEnumerable<TMS.Common.Models.ProjectModel>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Projects</h3>
        <div class="alert alert-success hifade in" style="display:none" id="successbar">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Project saved successfully.</strong> 
        </div>
       
    </div>
</div><!--/.row-->

<p>
    @Html.ActionLink("Create New Project", "CreateProject", null, new { @class="btn btn-primary"})
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Project Name</th>
                            <th>Payment Type</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>@Html.ActionLink(item.ProjectName, "ProjectDetails", new { id = item.ID }) </td>
                            <td>@Html.DisplayFor(modelItem=>item.PaymentType)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                                <div class="btn-group">
                                    @Html.ActionLink("Edit", "EditProject", new {id = item.ID}, new {@class = "btn btn-warning"})
                                    @Html.ActionLink("Delete", "DeleteProject", new {id = item.ID}, new {@class = "btn btn-danger"})
                                </div>
                            </td>
                       </tr>
                        }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!--/.row-->	