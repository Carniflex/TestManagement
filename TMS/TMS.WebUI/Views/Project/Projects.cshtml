@model IEnumerable<TMS.Common.Models.ProjectModel>
         
   <div class="span10">
       <p>
    @Html.ActionLink("Add New Project", "CreateProject", "Project", null, new { @class = "btn btn-primary" })
           </p>
</div> 
                   
<div class="row-fluid">

   

    <div class="box span10">
        <div class="box-header ">
            <h2><i class="halflings-icon align-justify"></i><span class="break"></span>Projects</h2>
            <div class="box-icon">

                <a class="btn-minimize" href="#"><i class="halflings-icon chevron-up"></i></a>

            </div>
        </div>
        <div class="box-content">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Project Name</th>
                        <th>Payment Type</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>@Html.ActionLink(item.ProjectName, "ProjectDetails", new { id = item.ID }) </td>
                            <td>@Html.DisplayFor(modelItem => item.PaymentType)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                              
                                <a class="btn btn-success" href=@Url.Action("ProjectDetails", "Project", new { id = item.ID })>
                                    <i class="halflings-icon white zoom-in"></i>
                                </a>
                                    <a class="btn btn-warning" href=@Url.Action("EditProject", "Project", new  { id = item.ID})>
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a class="btn btn-danger" href=@Url.Action("EditProject", "Project", new  { id = item.ID})>
                                        <i class="halflings-icon white trash"></i>
                                    </a>
                                
                           
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="pagination pagination-centered">
                <ul>
                    <li><a href="#">Prev</a></li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>

    </div>


